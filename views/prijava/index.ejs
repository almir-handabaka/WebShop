        integrity="sha512-eVL5Lb9al9FzgR63gDs1MxcDS2wFu3loYAgjIH0+Hg38tCS8Ag62dwKyH+wzDb+QauDpEZjXbMn11blw8cbTJQ=="
        crossorigin="anonymous"></script>

      <script>
        var socket = io();
        socket.on('pocetak', function (msg) {
          console.log(msg);
        });
      </script>
</body>

</html>