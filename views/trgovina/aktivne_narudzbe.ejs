    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body class="purple">
    <%- include('../partials/trgovac_hm.ejs') %>

        <div class="px-4 py-1 my-2 ">
            <div class="col-lg-10 mx-auto">
                <div class="album py-2">
                    <div class="container">
                        <main id="main">
                            <div
                                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                                <h1 class="h2"></h1>
                                <div class="btn-toolbar mb-2 mb-md-0">


                                </div>
                            </div>

                            <h2>Nove narudžbe</h2>
                            <div class="table-responsive">
                                <table class=" table table-striped table-dark table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Artikal</th>
                                            <th scope="col">Poručioc</th>
                                            <th scope="col">Adresa</th>
                                            <th scope="col">Kolicina</th>
                                            <th scope="col">Totalna cijena</th>
                                            <th scope="col">Akcije</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%let brojac=1; for(let i=0;i<artikli.length;i++) {%>
                                            <% if(artikli[i].status_isporuke===0) {%>
                                                <tr id='<%=artikli[i].id_narudzbe%>'>
                                                    <td>
                                                        <%= brojac %>
                                                            <% brojac++; %>
                                                    </td>
                                                    <td>
                                                        <%= artikli[i].naziv_artikla %>
                                                    </td>
                                                    <td>
                                                        <%= artikli[i].ime %>
                                                            <%= artikli[i].prezime %>
                                                    </td>
                                                    <td>
                                                        G. Velesici, Novo Sarajevo, Sarajevo
                                                    </td>
                                                    <td>
                                                        <%= artikli[i].kolicina %>
                                                    </td>
                                                    <td>
                                                        <%= artikli[i].kolicina * artikli[i].cijena_po_kom %>

                                                    </td>

                                                    <td>
                                                        <div class="btn-group btn-group-justified" role="group">
                                                            <div class="btn-group" role="group">
                                                                <button type="button"
                                                                    class=" btn-group btn btn-sm btn-success"
                                                                    onclick="prihvatiNarudzbu('<%= artikli[i].id_narudzbe%>')"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#staticBackdropUrediArtikal">
                                                                    <span data-feather="calendar"></span>
                                                                    Prihvati
                                                                </button>
                                                            </div>
                                                            <div class="btn-group" role="group">
                                                                <button type="button"
                                                                    class="btn-group btn btn-sm btn-danger"
                                                                    onclick="odbijNarudzbu('<%= artikli[i].id_narudzbe%>')">
                                                                    <span data-feather="calendar"></span>
                                                                    Odbij
                                                                </button>
                                                            </div>

                                                        </div>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <% } %>

                                    </tbody>
                                </table>
                            </div>
                            <div
                                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-primary">
                                <h1 class="h2"></h1>
                                <div class="btn-toolbar mb-2 mb-md-0">
                                </div>
                            </div>

                            <h2>Narudžbe u toku</h2>
                            <div class="table-responsive">
                                <table class=" table table-striped table-dark table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Artikal</th>
                                            <th scope="col">Poručioc</th>
                                            <th scope="col">Adresa</th>
                                            <th scope="col">Kolicina</th>
                                            <th scope="col">Totalna cijena</th>
                                            <th scope="col">Akcije</th>
                                        </tr>
                                    </thead>
                                    <tbody id="narUToku">
                                        <% brojac=1;for(let i=0;i<artikli.length;i++) {%>
                                            <% if(artikli[i].status_isporuke===1) {%>
                                                <tr id='<%=artikli[i].id_narudzbe%>'>
                                                    <td>
                                                        <%= brojac %>
                                                            <% brojac++; %>
                                                    </td>
                                                    <td>
                                                        <%= artikli[i].naziv_artikla %>
                                                    </td>
                                                    <td>
                                                        <%= artikli[i].ime %>
                                                            <%= artikli[i].prezime %>
                                                    </td>
                                                    <td>
                                                        G. Velesici, Novo Sarajevo, Sarajevo
                                                    </td>
                                                    <td>
                                                        <%= artikli[i].kolicina %>
                                                    </td>
                                                    <td>
                                                        <%= artikli[i].kolicina * artikli[i].cijena_po_kom %>

                                                    </td>

                                                    <td>
                                                        <div class="btn-group btn-group-justified" role="group">
                                                            <div class="btn-group" role="group">
                                                                <button type="button"
                                                                    class=" btn-group btn btn-sm btn-success"
                                                                    onclick="isporucenaNarudzba('<%= artikli[i].id_narudzbe%>')"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#staticBackdropUrediArtikal">
                                                                    <span data-feather="calendar"></span>
                                                                    Isporučeno
                                                                </button>
                                                            </div>
                                                            <div class="btn-group" role="group">
                                                                <button type="button"
                                                                    class="btn-group btn btn-sm btn-danger"
                                                                    onclick="odbijNarudzbu('<%= artikli[i].id_narudzbe%>')">
                                                                    <span data-feather="calendar"></span>
                                                                    Otkaži
                                                                </button>
                                                            </div>

                                                        </div>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <% } %>

                                    </tbody>
                                </table>
                        </main>
                    </div>
                </div>
            </div>
        </div>

        </div>
        </div>



        <script>
            (function () {
                'use strict'

                document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
                    console.log("Open");
                    document.querySelector('.offcanvas-collapse').classList.toggle('open')
                })
            })()


        </script>
</body>

</html>