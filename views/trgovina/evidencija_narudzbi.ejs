    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body class="purple">
    <%- include('../partials/trgovac_hm.ejs') %>

        <div class="px-4 py-1 my-2 ">
            <div class="col-lg-10 mx-auto">
                <div class="album py-2">
                    <div class="container">
                        <main id="main">
                            <div
                                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                                <h1 class="h2"></h1>
                                <div class="btn-toolbar mb-2 mb-md-0">


                                </div>
                            </div>



                            <h2>Sveukupan broj narud탑bi <%= artikli.length %>
                            </h2>
                            <div class="table-responsive">
                                <table class=" table table-striped table-dark table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Artikal</th>
                                            <th scope="col">Poru훾ioc</th>
                                            <th scope="col">Adresa</th>
                                            <th scope="col">Kolicina</th>
                                            <th scope="col">Totalna cijena</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i=0;i<artikli.length;i++) {%>
                                            <tr id='<%=artikli[i].id_artikla%>'>
                                                <td>
                                                    <%= i + 1 %>
                                                </td>
                                                <td>
                                                    <%= artikli[i].naziv_artikla %>
                                                </td>
                                                <td>
                                                    <%= artikli[i].ime %>
                                                        <%= artikli[i].prezime %>
                                                </td>
                                                <td>
                                                    G. Velesici, Novo Sarajevo, Sarajevo
                                                </td>
                                                <td>
                                                    <%= artikli[i].kolicina %>
                                                </td>
                                                <td>
                                                    <%= artikli[i].kolicina * artikli[i].cijena_po_kom %>

                                                </td>

                                                <td>
                                                    <% if(artikli[i].status_isporuke===0) {%>
                                                        Nova narud탑ba

                                                        <% } else if (artikli[i].status_isporuke===1) { %>
                                                            U toku


                                                            <% } else if (artikli[i].status_isporuke===2) { %>
                                                                Isporu훾eno
                                                                <% } else if (artikli[i].status_isporuke===3) { %>
                                                                    Odbijeno
                                                                    <% } %>



                                                </td>
                                            </tr>
                                            <% } %>

                                    </tbody>
                                </table>
                            </div>
                        </main>
                    </div>
                </div>
            </div>
        </div>

        </div>
        </div>



        <script>
            (function () {
                'use strict'

                document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
                    console.log("Open");
                    document.querySelector('.offcanvas-collapse').classList.toggle('open')
                })
            })()


        </script>
</body>

