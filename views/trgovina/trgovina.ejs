<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <link href="/stylesheets/trgovac.css" rel="stylesheet">

    <!-- Socket.io CDN -->
    <script src="https://cdn.socket.io/4.4.1/socket.io.min.js"
        integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H"
        crossorigin="anonymous"></script>



    <!-- Custom styles for this template -->
    <script src="/javascripts/trgovina.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script src="https://unpkg.com/@yaireo/tagify"></script>
    <script src="https://unpkg.com/@yaireo/tagify/dist/tagify.polyfills.min.js"></script>
    <link href="https://unpkg.com/@yaireo/tagify/dist/tagify.css" rel="stylesheet" type="text/css" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>

<body class="purple">
    <%- include('../partials/trgovac_hm.ejs') %>

        <div class="px-4 py-1 my-2 ">
            <div class="col-lg-10 mx-auto">
                <div class="album py-2">
                    <div class="container">
                        <main id="main">
                            <div
                                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                                <h1 class="h2"></h1>
                                <div class="btn-toolbar mb-2 mb-md-0 ">

                                    <button type="button" class="btn btn-md btn-success" data-bs-toggle="modal"
                                        data-bs-target="#staticBackdropUrediArtikal"
                                        onclick="srediModal('', 'Dodaj artikal', 'dodaj')">
                                        <span data-feather="calendar"></span>
                                        Dodaj Novi artikal
                                    </button>
                                </div>
                            </div>



                            <h2>Ukupno <%= artikli.length %> artikala</h2>
                            <div class="table-responsive">
                                <table class=" table table-striped table-dark table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Naziv</th>
                                            <th scope="col">Kategorija</th>
                                            <th scope="col">Cijena</th>
                                            <th scope="col">Akcije</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i=0;i<artikli.length;i++) {%>
                                            <tr id='<%=artikli[i].id_artikla%>'>
                                                <td>
                                                    <%= i + 1 %>
                                                </td>
                                                <td>
                                                    <%= artikli[i].naziv_artikla %>
                                                </td>
                                                <td>
                                                    <%= artikli[i].naziv_kategorije %>
                                                </td>
                                                <td>
                                                    <%= artikli[i].cijena %> KM
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-justified" role="group">
                                                        <div class="btn-group" role="group">
                                                            <button type="button"
                                                                class=" btn-group btn btn-sm btn-warning"
                                                                onclick="srediModal( '<%= JSON.stringify(artikli[i] )%>', 'Uredi artikal', 'edit'  )"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#staticBackdropUrediArtikal">
                                                                <span data-feather="calendar"></span>
                                                                Uredi
                                                            </button>
                                                        </div>
                                                        <div class="btn-group" role="group">
                                                            <button type="button"
                                                                class="btn-group btn btn-sm btn-danger"
                                                                onclick="izbrisiArtikal('<%=artikli[i].id_artikla%>')">
                                                                <span data-feather="calendar"></span>
                                                                Izbriši
                                                            </button>
                                                        </div>
                                                        <div class="btn-group" role="group">
                                                            <button type="button" class="btn btn-sm btn-success"
                                                                onclick="izbrisiArtikal('<%=artikli[i].id_artikla%>')">
                                                                <span data-feather="calendar"></span>
                                                                Dodaj u katalog
                                                            </button>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>

                                    </tbody>
                                </table>
                            </div>
                        </main>
                    </div>
                </div>
            </div>
        </div>

        </div>
        </div>

        <!-- Modal za edit -->
        <!-- Naziv, kategorija, cijena, slike, vrsta oglasa(prodaja, iznamljivanje), lokacija(po defaultu se stavlja lokacija prodavnice), datum objave, samo prikaz ocjena, stanje(novo, koristeno, refurbished) -->
        <div class=" modal fade" id="staticBackdropUrediArtikal" data-bs-backdrop="static" data-bs-keyboard="false"
            tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Uredi artikal</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="data" method="post" action="/trgovina/dodaj_artikal" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="naziv" class="col-form-label">Naziv:</label>
                                <input type="text" class="form-control" id="naziv" name="naziv">
                            </div>
                            <div class="row">
                                <div class="mb-3 col">
                                    <label for="cijena" class="col-form-label">Cijena:</label>
                                    <input type="text" class="form-control" id="cijena" name="cijena">
                                </div>
                                <div class="mb-3 col">
                                    <label for="kolicina" class="col-form-label">Kolicina:</label>
                                    <input type="text" class="form-control" id="kolicina" value="1" name="kolicina">
                                </div>
                                <div class="mb-3 col">
                                    <label for="stanje" class="col-form-label">Stanje:</label>
                                    <select id="stanje" class="form-select form-select-sm"
                                        aria-label=".form-select-sm example" name="stanje">
                                        <option value="1">Novo</option>
                                        <option value="2">Korišteno</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col">
                                    <label for="kategorija" class="col-form-label">Kategorija:</label>
                                    <select id="kategorija" name="kategorija" class="form-select form-select-sm"
                                        aria-label=".form-select-sm example">

                                    </select>
                                </div>
                                <div class="mb-3 col">
                                    <label for="lokacija" class="col-form-label">Lokacija:</label>

                                    <select id="lokacija" class="form-select form-select-sm"
                                        aria-label=".form-select-sm example" name="lokacija">

                                    </select>
                                </div>

                            </div>
                            <div class="mb-3">
                                <label for="opis" class="col-form-label">Opis:</label>
                                <textarea class="form-control" id="opis" name="opis"></textarea>
                            </div>
                            <div class="mb-3">

                                <label for="fotografija" class="col-form-label">Dodajte fotografiju</label>
                                <div class="input-group mb-4">
                                    <input type="file" accept='image/*' name='slike_artikla' multiple
                                        class="form-control" id="inputGroupFile01">

                                </div>


                            </div>
                            <div class="mb-3">
                                <label for="basic" class="col-form-label">Unesite tagove:</label>
                                <input name='basic' value='tag1, tag2 autofocus'>

                            </div>

                            <div class="accordion" id="accordionExample">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingOne">
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapseOne" aria-expanded="true"
                                            aria-controls="collapseOne" onclick="dohvatiFotografije()">
                                            Fotografije
                                        </button>
                                    </h2>

                                    <div id="collapseOne" class="accordion-collapse collapse"
                                        aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <div id="uplFotografije" class="row py-3 shadow-5">

                                            </div>
                                        </div>
                                    </div>

                                </div>



                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zatvori</button>
                                <button id="sacuvajDugme" type="button" class="btn btn-primary"
                                    onclick="dodajArtikal('add')">Sačuvaj</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            (function () {
                'use strict'

                document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
                    console.log("Open");
                    document.querySelector('.offcanvas-collapse').classList.toggle('open')
                })
            })()


        </script>
        <script>
            var input = document.querySelector('input[name=basic]');

            // initialize Tagify on the above input node reference
            var tg_input = new Tagify(input);
        </script>
        <!-- JS za socket.io notifikacije -->
        <script src="/javascripts/notifikacije.js"></script>
</body>

</html>