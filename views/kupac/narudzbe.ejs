<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <!-- JQUERY -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>


  <!-- TOASTR -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

  <link href="/stylesheets/pocetna_kupac.css" rel="stylesheet">

  <style>
  </style>

</head>

<body>

  <%- include('../partials/kupac_hm.ejs') %>
    <br>


    <div class="px-4 py-1 my-5 ">
      <div class="col-lg-10 mx-auto">
        <div class="album py-2">
          <div class="container">

            <div class=" bg-white">

              <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2"></h1>

              </div>

              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Proizvod</th>
                    <th scope="col">Količina</th>
                    <th scope="col">Cijena/1</th>
                    <th scope="col">Totalni iznos</th>
                    <th scope="col">Status</th>
                    <th>Akcije</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i=0;i<narudzbe.length;i++) {%>
                    <tr>
                      <td>
                        <%= narudzbe[i].naziv_artikla %>
                      </td>
                      <td>
                        <%= narudzbe[i].kolicina %>
                      </td>
                      <td>
                        <%= narudzbe[i].cijena_po_kom %> KM
                      </td>
                      <td>
                        <%= narudzbe[i].cijena_po_kom * narudzbe[i].kolicina%> KM
                      </td>
                      <td id="narudzba<%= narudzbe[i].id_narudzbe%>">
                        <%= narudzbe[i].naziv_statusa_isporuke%>
                      </td>
                      <td>
                        <% if (narudzbe[i].status_isporuke===1 || narudzbe[i].status_isporuke===2) { %>
                          <button type="button" class="btn btn-outline-danger"
                            onclick="otkaziNarudzbu('<%=narudzbe[i].id_narudzbe%>')">Otkaži narudžbu</button>

                          <% } else if (narudzbe[i].status_isporuke===4 && narudzbe[i].ocjena_kupca===null) { %>
                            <button type="button" class="btn btn-outline-success" data-bs-toggle="modal"
                              data-bs-target="#ocjenaModal"
                              onclick="ocjena_id_narudzbe = <%= narudzbe[i].id_narudzbe%>">Ocjenite
                              narudžbu</button>
                            <% } %>

                      </td>
                    </tr>
                    <% } %>
                </tbody>

              </table>




            </div>
          </div>
        </div>

      </div>

    </div>


    <!-- Modal -->
    <div class="modal fade" id="ocjenaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ocijenite narudžbu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon3">Ocijena (5 najbolja - 1 najgora) </span>
              <select id="ocijenaNarudzbe" class="form-select form-select-sm" aria-label=".form-select-sm example">
                <option selected value="5">5</option>
                <option value="4">4</option>
                <option value="3">3</option>
                <option value="2">2</option>
                <option value="1">1</option>
              </select>
            </div>
            <div class="input-group py-4">
              <span class="input-group-text">Komentar</span>
              <textarea id="komentarNarudzbe" class="form-control" aria-label="With textarea"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zatvori</button>
            <button type="button" class="btn btn-primary" onclick="ocijeniNarudzbu()">Sačuvaj</button>
          </div>
        </div>
      </div>
    </div>

    <script src="/javascripts/artikal.js"></script>

    <script>
      (function () {
        'use strict'

        document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
          console.log("Open");
          document.querySelector('.offcanvas-collapse').classList.toggle('open')
        })
      })()


    </script>
</body>

</html>