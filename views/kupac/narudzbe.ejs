<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <!-- JQUERY -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>


  <!-- TOASTR -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

  <link href="/stylesheets/pocetna_kupac.css" rel="stylesheet">

  <style>
  </style>

</head>

<body>

  <%- include('../partials/kupac_hm.ejs') %>
    <br>


    <div class="px-4 py-1 my-5 ">
      <div class="col-lg-10 mx-auto">
        <div class="album py-2">
          <div class="container">

            <div class=" bg-white">

              <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2"></h1>

              </div>

              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Proizvod</th>
                    <th scope="col">Količina</th>
                    <th scope="col">Cijena/1</th>
                    <th scope="col">Totalni iznos</th>
                    <th scope="col">Status</th>
                    <th>Akcije</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i=0;i<narudzbe.length;i++) {%>
                    <tr>
                      <td>
                        <%= narudzbe[i].naziv_artikla %>
                      </td>
                      <td>
                        <%= narudzbe[i].kolicina %>
                      </td>
                      <td>
                        <%= narudzbe[i].cijena_po_kom %> KM
                      </td>
                      <td>
                        <%= narudzbe[i].cijena_po_kom * narudzbe[i].kolicina%> KM
                      </td>
                      <td id="narudzba<%= narudzbe[i].id_narudzbe%>">
                        <%= narudzbe[i].naziv_statusa_isporuke%>
                      </td>
                      <td>
                        <% if (narudzbe[i].status_isporuke===1 || narudzbe[i].status_isporuke===2) { %>
                          <button type="button" class="btn btn-outline-danger"
                            onclick="otkaziNarudzbu('<%=narudzbe[i].id_narudzbe%>')">Otkaži narudžbu</button>
                          <% } %>

                      </td>
                    </tr>
                    <% } %>
                </tbody>

              </table>




            </div>
          </div>
        </div>

      </div>

    </div>




    <script src="/javascripts/artikal.js"></script>

    <script>
      (function () {
        'use strict'

        document.querySelector('#navbarSideCollapse').addEventListener('click', function () {
          console.log("Open");
          document.querySelector('.offcanvas-collapse').classList.toggle('open')
        })
      })()


    </script>
</body>

</html>